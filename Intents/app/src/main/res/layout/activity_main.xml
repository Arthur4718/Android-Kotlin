<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" >
    <Button
            android:text="Abrir uma nova Tela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAbrirNovaTela" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Abrir Contatos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAbrirContatos" app:layout_constraintStart_toStartOf="@+id/btnAbrirNovaTela"
            app:layout_constraintEnd_toEndOf="@+id/btnAbrirNovaTela" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAbrirNovaTela"/>
    <Button
            android:text="Abrir Câmera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAbrirCâmera" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAbrirContatos"
            app:layout_constraintStart_toStartOf="@+id/btnAbrirContatos"
            app:layout_constraintEnd_toEndOf="@+id/btnAbrirContatos"/>
</android.support.constraint.ConstraintLayout>