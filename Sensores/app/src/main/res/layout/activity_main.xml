<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acelerometro."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:id="@+id/textView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Meda a mudança de aceleração aplicada aos eixos do dispositivo. "
            android:textAlignment="center" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="X axis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/tvValorX"
            android:textStyle="bold" android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/idText"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvValorX" app:layout_constraintStart_toStartOf="@+id/tvValorX"
            android:text="Y axis" android:textColor="@color/design_default_color_primary" android:textStyle="bold"/>
    <TextView
            android:text="Z  axis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/tvValorY"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvValorY"
            android:textColor="@color/colorAccent" android:textStyle="bold"/>
    <TextView
            android:text="X : "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvValorX" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:textSize="22sp"
            android:textColor="@android:color/holo_green_dark" android:layout_marginEnd="100dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Y : "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvValorY" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:textSize="22sp"
            android:textColor="@color/design_default_color_primary" android:layout_marginEnd="100dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="Z : "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvValorZ" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:textSize="22sp"
            android:textColor="@color/colorAccent" android:layout_marginEnd="100dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView8"/>

</android.support.constraint.ConstraintLayout>